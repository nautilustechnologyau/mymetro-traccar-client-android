<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="au.mymetro.operator.ui.home.HomeFragment">

    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/trip_info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/trip_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/trip_info_route_header"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/trip_info_toward"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:contentDescription="Route"
                            android:gravity="center"
                            android:src="@drawable/ic_arrows_up"
                            app:tint="@color/primary_dark" />

                        <TextView
                            android:id="@+id/trip_info_route"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_black"
                            android:gravity="center"
                            android:text="H20"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#AA00FF"
                            android:textSize="54sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/trip_info_route_details"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/trip_info_times"
                        app:layout_constraintStart_toEndOf="@+id/trip_info_route_header"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/trip_info_headsign"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/lato_black"
                                android:singleLine="true"
                                android:text="Paradise"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="54sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/trip_info_next_stop_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_black"
                                    android:singleLine="true"
                                    android:text="Stop 21c St Bernards Rd - East Side"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/trip_info_next_stop_direction"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:ellipsize="end"
                                        android:fontFamily="sans-serif-condensed"
                                        android:singleLine="true"
                                        android:text="Westbound"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/trip_info_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:paddingEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/theme_primary_dark"
                                    android:fontFamily="@font/lato_bold"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="SCHEDULED"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/cardview_light_background"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/trip_info_arrival_time_scheduled"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_black"
                                    android:gravity="center"
                                    android:text="12:30 AM"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/theme_primary_dark"
                                    android:fontFamily="@font/lato_bold"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="ARRIVING"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/cardview_light_background"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/trip_info_arrival_time_estimated"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_black"
                                    android:gravity="center"
                                    android:text="12:35 AM"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/trip_ext_info_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/trip_info_trip_travel_distance_progress"
                                android:layout_width="150dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminateOnly="false"
                                android:progress="60"
                                android:progressDrawable="@drawable/circle_progress" />

                            <TextView
                                android:id="@+id/trip_info_travelled_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_black"
                                android:gravity="center"
                                android:text="12%"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/trip_info_trip_travel_distance_progress"
                                app:layout_constraintEnd_toEndOf="@+id/trip_info_trip_travel_distance_progress"
                                app:layout_constraintLeft_toLeftOf="@+id/trip_info_trip_travel_distance_progress"
                                app:layout_constraintStart_toStartOf="@+id/trip_info_trip_travel_distance_progress"
                                app:layout_constraintTop_toTopOf="@+id/trip_info_trip_travel_distance_progress" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            style="@style/ArrivalsListStatusSmallStyleA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corners_style_b_status"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center|bottom"
                            android:text="Progress"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/trip_info_speed_progress"
                                android:layout_width="150dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminateOnly="false"
                                android:progress="60"
                                android:progressDrawable="@drawable/circle_progress" />

                            <TextView
                                android:id="@+id/trip_info_speed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_black"
                                android:gravity="center"
                                android:text="40"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/trip_info_speed_progress"
                                app:layout_constraintEnd_toEndOf="@+id/trip_info_speed_progress"
                                app:layout_constraintLeft_toLeftOf="@+id/trip_info_speed_progress"
                                app:layout_constraintStart_toStartOf="@+id/trip_info_speed_progress"
                                app:layout_constraintTop_toTopOf="@+id/trip_info_speed_progress" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            style="@style/ArrivalsListStatusSmallStyleA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corners_style_b_status"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center|bottom"
                            android:text="Speed km/h"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/trip_info_next_stop_distance_progress"
                                android:layout_width="150dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminateOnly="false"
                                android:progress="60"
                                android:progressDrawable="@drawable/circle_progress" />

                            <TextView
                                android:id="@+id/trip_info_next_stop_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_black"
                                android:gravity="center"
                                android:text="200 m"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/trip_info_next_stop_distance_progress"
                                app:layout_constraintEnd_toEndOf="@+id/trip_info_next_stop_distance_progress"
                                app:layout_constraintLeft_toLeftOf="@+id/trip_info_next_stop_distance_progress"
                                app:layout_constraintStart_toStartOf="@+id/trip_info_next_stop_distance_progress"
                                app:layout_constraintTop_toTopOf="@+id/trip_info_next_stop_distance_progress" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            style="@style/ArrivalsListStatusSmallStyleA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corners_style_b_status"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center|bottom"
                            android:text="Distance"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/trip_info_arrival_status_progress"
                                android:layout_width="150dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminateOnly="false"
                                android:progress="100"
                                android:progressDrawable="@drawable/circle_progress" />

                            <TextView
                                android:id="@+id/trip_info_arrival_eta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:text="NOW"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/trip_info_arrival_status_progress"
                                app:layout_constraintEnd_toEndOf="@+id/trip_info_arrival_status_progress"
                                app:layout_constraintLeft_toLeftOf="@+id/trip_info_arrival_status_progress"
                                app:layout_constraintStart_toStartOf="@+id/trip_info_arrival_status_progress"
                                app:layout_constraintTop_toTopOf="@+id/trip_info_arrival_status_progress" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/trip_info_arrival_status"
                            style="@style/ArrivalsListStatusSmallStyleA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corners_style_b_status"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center|bottom"
                            android:text="5 min late"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/trip_schedule_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:contentDescription="Show trip schedule"
                            android:gravity="right"
                            android:src="@drawable/ic_icon_trip"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#00555555"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/trip_info_header">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_stop_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/trip_info_header">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stop_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="2dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_drawer_maps_place"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/select_stop_info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_bold"
                        android:singleLine="true"
                        android:text="-:-"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="2dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_icon_trip"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/select_trip_info_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_bold"
                        android:singleLine="true"
                        android:text="-:-"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="32sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/select_stop_header">

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/arrival_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ri_route_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/route_info"
            layout="@layout/route_info_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
