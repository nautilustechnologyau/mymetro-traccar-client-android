<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:configChanges="keyboardHidden|orientation|screenSize">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/simple_arrival_info_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">
    <!--
    <FrameLayout
            android:id="@+id/simple_arrival_info_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialLayout"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">
            -->

        <ImageView style="@style/MaterialSmallIcon"
                   android:src="@drawable/ic_stop_info"
                   android:id="@+id/arrival_list_action_info"
                   app:tint="@color/primary" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_dialog_trip"
                style="@style/MaterialItem"
                android:textSize="15sp"
                android:id="@+id/simple_arrival_info_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

    </androidx.cardview.widget.CardView>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/simple_arrival_content"
                  android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
