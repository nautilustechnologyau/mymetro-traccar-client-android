    <color name="primary_dark">#9832CB</color>
    <color name="accent">#9E00FE</color>
    <color name="muted">#7E38EB</color>

    <!-- MyMetro Theme -->
    <color name="theme_primary_dark">@color/primary_dark</color>
    <color name="theme_primary">@color/primary</color>
    <color name="theme_muted">@color/muted</color>
    <color name="theme_accent">@color/accent</color>

    <!-- Arrival time colors -->
    <color name="stop_info_ontime">#4F1C70</color>
    <color name="stop_info_early">#1F0954</color>
    <color name="stop_info_delayed">#6D5ACE</color>
